                     local src_device_id = dev_src.deviceID

                     local flags = 0
                     if dest_device_id != nil and src_dev_id != nil and dest_device_id == src_device_id then
                        flags = bit.bor(flags, CEF_DELETE)
                     elseif (dev_src.deviceFlags == dev_dest.deviceFlags) and
